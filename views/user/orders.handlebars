<div class="row">
    <div class="col-md-8 col-md-offset-2">
        {{#if orders}}
        <br>
        <br>
        <h2>My Orders</h2>
        {{#each orders }}
        <ol class="list-group list-group-numbered">
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
            <div class="fw-bold">{{"carts.product_name"}}</div>
            
            </div>
            <span class="badge bg-primary rounded-pill">14</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
            <div class="fw-bold">Product Name</div>
            Detail
            </div>
            <span class="badge bg-primary rounded-pill">$</span>
        </li>
        </ol>
        {{/each}}
    </div>
</div>
{{else}}
    <div class="py-6 py-lg-12">
        <div class="container">
            <div class="row">
                <div class="offset-lg-3 col-lg-6 col-md-12 col-12 text-center">
                    <img src="https://cdn.dribbble.com/users/721524/screenshots/4112199/media/1f1357e2a1886218a716c24a0d15462b.png?compress=1&resize=400x300" alt="" class="img-fluid mb-4" style="padding-top: 75px;" />
                    <h2>You have not made any orders yet</h2>
                    <a href="/product/products" class="btn btn-outline-light mb-4" style="background:var(--green); ">Explore Products</a>
                </div>
            </div>
        </div>
    </div>
{{/if}}
