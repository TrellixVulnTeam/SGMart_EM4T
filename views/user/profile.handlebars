<div class="container">
    <div class="main-body">
    
        <div class="row gutters-sm" style="margin-top: 2.5%">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img class="rounded-circle" height="50%" width="50%" src="data:image/jpeg;base64,">
                            <div class="mt-3">
                                <h4>{{user.name}}</h4>
                                <span class="text-black-50">Date Joined: {{formatDate user.createdAt 'DD MMM YYYY'}}</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="profile-nav col-md-3 w-100">
                        <div class="panel">
                            <ul class="nav nav-pills nav-stacked">
                                <li class="active"><a href="#"> <i class="fa fa-user"></i> Account Overview</a></li>
                                <li><a href="/user/editprofile/{{user.id}}"><i class="fa fa-edit"></i> Edit Information</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <h2>Personal Information</h2>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{#if user.name}}
                                    {{user.name}}
                                {{else}}
                                    - 
                                {{/if}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{#if user.email}}
                                    {{user.email}}
                                {{else}}
                                    - 
                                {{/if}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone Number</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{#if user.phoneNumber}}
                                    {{user.phoneNumber}}
                                {{else}}
                                    -
                                {{/if}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address Line 1</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{#if user.address}}
                                    {{user.address}}
                                {{else}}
                                    -
                                {{/if}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address Line 2</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{#if user.address2}}
                                    {{user.address2}}
                                {{else}}
                                    -
                                {{/if}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Postal Code</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{#if user.postalCode}}
                                    {{user.postalCode}}
                                {{else}}
                                    -
                                {{/if}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12" style="padding-right: 5%;">
                                <a class="btn" style="float: left !important;">
                                    {{#if user.tfa}}
                                        <input type="checkbox" id="myButton" name="myButton" value="{{user.id}}" checked> Enable 2 Factor Authentication
                                    {{else}}
                                        <input type="checkbox" id="myButton" name="myButton" value="{{user.id}}"> Enable 2 Factor Authentication
                                    {{/if}}
                                </a>
                                <a class="btn btn-info" style="float: right !important;" href="/user/editprofile/{{user.id}}" >Edit</a>
                            </div>
                        </div>
                    </div>

                    
                </div>
                {{!-- <div class="col-sm-6 mb-3">
                  <div class="card h-100">
                    <div class="card-body">
                      <small>Web Design</small>
                      <div class="progress mb-3" style="height: 5px">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
                    </div>
                  </div>
                </div> --}}
                {{#unless (isMAdmin user.userType)}}
                    <div class="col-md-12">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h2>Delete Account</h2>
                                <hr>
                                <p class="delete">Note: Deleting your account is a <span class="bold red">permanent </span>
                                    action and <span class="bold red">cannot be reversed</span></p>
                                <div class="row">
                                    <div class="col-sm-12" style="padding-right: 5%;">
                                        <a type="button" class="btn btn-info" style="float: right !important;" data-toggle="modal" data-target="#exampleModal">Delete Account</a>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                {{/unless}}
            </div> 
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete Account</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete your account?<br><br>
        Note: Deleting your account is a permanent action and cannot be reversed
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <a type="button" class="btn btn-danger" href="/user/deleteAccount/{{user.id}}">Confirm</a>
      </div>
    </div>
  </div>
</div>
<script>
    var button = document.getElementById('myButton');
    var x = document.getElementById("myButton").value;
    button.onclick = function() {
        var atLeastOneIsChecked = $('input[name="myButton"]:checked').length > 0;
        if (atLeastOneIsChecked) {
            location.assign('/user/'+x+'/2fa');
        }      
    }
</script>
