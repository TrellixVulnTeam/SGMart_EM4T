<!-- Core theme CSS (includes Bootstrap)-->


<header class=" py-5 head">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
            <img src="https://media.nedigital.sg/fairprice/images/d2e3e59c-a3d7-4fad-884f-c9d1b7214f5d/Realpawtyanimals-HomeMainBanner-Aug2022.jpg?q=70" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
            <img src="https://media.nedigital.sg/fairprice/images/4681f7aa-06ae-492d-8c89-d0d05f646e61/MidAutumn-HomeMainBanner-Aug2022.jpg?w=1920&q=75" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
            <img src="https://media.nedigital.sg/fairprice/images/6ef897bd-6e0b-411c-8f50-d6bd24f14502/Carlsberg-HomeMainBanner-Aug2022-S3B.jpg?w=1920&q=75" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
        </div> 
</header>

<div class="pdts">
    <h4>Most Viewed Items</h4>
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        {{#if products}}
        {{#each products}}
        <div class="col mb-5">
            <div class="card h-100">
                <!-- Sale badge-->
                <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">{{discount}} % OFF</div>
                <img class="card-img-top" src="/images/{{image}}" alt="{{product_name}}"/>
                <div class="card-body p-4">
                    <div class="text-center">
                        <h5 class="fw-bolder">{{product_name}}</h5>
                        ${{product_price}}
                        <div class="d-flex justify-content-center small text-warning mb-2">
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                        </div>
                    </div>
                </div>
                <!-- Product actions-->
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="text-center"><a class="btn btn-outline-dark mt-auto addo" href="#">Add to cart</a></div>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <h1>hi</h1>
        {{/if}}


    </div>
</div>
<!-- Core theme JS-->
<script src="js/scripts.js"></script>

<div class="container">

</div>

